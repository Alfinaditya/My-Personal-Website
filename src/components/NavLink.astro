---
interface Props {
	href: string;
	activeClassName: string;
}

const currentPath = Astro.url.pathname;
const { href, activeClassName } = Astro.props;
const active = activeClassName;
---

<a class={currentPath === href ? active : ''} href={href}
	><slot />
	{
		JSON.stringify({
			currentPath: currentPath,
			href: href,
		})
	}
	{currentPath === href ? 'isPathh' : 'Not Path'}</a
>
