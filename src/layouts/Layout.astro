---
interface Props {
	title: string;
}
import '@/styles/globals.css';
import Navbar from '../components/Navbar.astro';
import { ViewTransitions } from 'astro:transitions';
import MobileNavbar from '../components/MobileNavbar';
import { SEO } from 'astro-seo';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
		<SEO
			title={title}
			description="My name is Alfin Aditya, i'm a person who is passionate about Web development. My favorite technologies are : React,Typescript and Next.JS"
			openGraph={{
				basic: {
					title: "Hi i'm Alfin 👏 i'm a Software Developer",
					url: 'https://www.alfinaditya.com',
					type: 'website',
					image: 'https://www.alfinaditya.com/me.webp',
				},
			}}
		/>
		<ViewTransitions />
	</head>
	<body>
		<Navbar />
		<MobileNavbar client:media="(max-width: 769px)" />
		<slot />
	</body>
</html>
